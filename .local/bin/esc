#!/bin/sh
## EditSCript

DIR="$HOME/.local/bin/"
if [ -z "$EDITOR" ]; then
	[ $(command -v nvim) ] && EDITOR=nvim || EDITOR=vim
fi

if [ "$1" ]; then
	choice="$1"
elif [ ! "$choice" ] && [ $(command -v fd) ] && [ $(command -v bat) ]; then
	choice=$(fd . --min-depth 1 --base-directory "$DIR" --color always | fzf --ansi --bind "ctrl-/:toggle-preview,alt-k:up,alt-j:down,ctrl-o:execute:$EDITOR $DIR{1}" --preview-window '~4,+{2}+4/3,<80(up)' --preview "bat -fn $DIR{1}")
else
	choice="$(find "$DIR" -mindepth 1 -printf '%P\n' | fzf --bind "ctrl-/:toggle-preview,alt-k:up,alt-j:down,ctrl-o:execute:$EDITOR $DIR{1}" --preview-window '~4,+{2}+4/3,<80(up)' --preview "cat $DIR{1}")"
fi

SELECTED="$DIR$choice"
if [ -f "$SELECTED" ]; then
	"$EDITOR" "$SELECTED"
elif [ "$choice" ]; then
	echo "#!/bin/sh" >>"$SELECTED"
	chmod +x "$SELECTED"
	"$EDITOR" "$SELECTED"
	[ "$(wc -l "$SELECTED" | cut -d' ' -f1)" = "1" ] && rm "$SELECTED"
fi
