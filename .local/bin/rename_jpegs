#!/bin/sh
ls ./*.jpg
#read -p "rename all jpg files listed above in \"$(pwd)\"? y/N? " answ			#Bashism
printf "rename all jpg files listed above in \"$(pwd)\"? y/N? " && read -r answ

if [ "$answ" = "y" ]; then
	for f in *.jpg
	do
		mv -vn "$f" "$(date -r "$f" +"%Y%m%d_%H%M%S").jpg"
	done
else
    echo "abort"
fi

